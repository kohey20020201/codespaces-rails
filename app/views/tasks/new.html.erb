<h1>新しいタスクを作成</h1>
<div class="task-column-new">
    <%= form_with(model: @task, url: "/tasks/create") do |f| %>
        <label for="content">内容：</label>
        <%= f.text_field :content, id: 'content' %>
        <br>
        <label for="due_date">期限：</label>
        <%= f.date_field :due_date, id: 'due_date' %>
        <br>
        <%= f.submit "作成", class: "new-btn"%>
    <% end %>
</div>