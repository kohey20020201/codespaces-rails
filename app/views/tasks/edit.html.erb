<h1>タスクを編集</h1>

<div class="task-column-edit">
    <%= form_with(model: @task, url: "/tasks/#{@task.id}", method: :patch) do |f| %>
        <label for="content">内容：</label>
        <%= f.text_field :content, id: "content" %>
        <br>
        <label for="content">ステータス</label>
        <%= f.select :status, {"保留中" => "pending", "進行中" => "in_progress", "完了" => "completed"}, id: 'status' %>
        <br>
        <label for="due_date">期限：</label>
        <%= f.date_field :due_date, id: "due_date" %>
        <br>
        <%= f.submit "更新", class: "update-btn"%>
    <% end %>
</div>